{
    "name": "colarys-backend",
    "version": "1.0.0",
    "main": "dist/app.js",
    "type": "commonjs",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
        "build": "tsc",
        "start": "node dist/app.js",
        "init-db": "ts-node src/scripts/initDatabase.ts",
        "vercel-build": "npm run build",
        "vercel-dev": "npm run build",
        "migrate:tsx": "tsx src/scripts/migrate-to-supabase.ts",
        "create-tables": "ts-node src/scripts/create-tables.ts",
        "migrate": "npm run create-tables && ts-node src/scripts/migrate-to-supabase.ts",
         "migrate-sql": "ts-node src/scripts/migrate-direct-sql.ts",
        "migrate-all": "npm run create-tables && npm run migrate-sql",
        "final-migrate": "ts-node src/scripts/final-migration.ts",
        "reset-and-migrate": "npm run final-migrate",
         "migrate-fix-dates": "ts-node src/scripts/fix-dates-migration.ts",
        "migrate-complete": "npm run migrate-fix-dates",
        "migrate-salaires": "ts-node src/scripts/migrate-salaires-only.ts",
        "migrate-all-final": "npm run migrate-fix-dates && npm run migrate-salaires"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.86.0",
        "@types/uuid": "^10.0.0",
        "@vercel/node": "^5.3.12",
        "axios": "^1.11.0",
        "bcryptjs": "^2.4.3",
        "buffer": "^6.0.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cloudinary": "^1.41.3",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^17.2.1",
        "exceljs": "^4.4.0",
        "express": "^4.18.2",
        "express-rate-limit": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "ms": "^2.1.3",
        "multer": "^2.0.2",
        "multer-storage-cloudinary": "^4.0.0",
        "mysql2": "^3.14.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pdfkit": "^0.14.0",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "signature_pad": "^5.1.1",
        "tslib": "^2.8.1",
        "typeorm": "^0.3.26",
        "uuid": "^9.0.1",
        "winston": "^3.17.0",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.25",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/ms": "^2.1.0",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.19.25",
        "@types/passport-jwt": "^4.0.1",
        "@types/pdfkit": "^0.17.3",
        "@types/pg": "^8.15.5",
        "@types/uuid": "^9.0.7",
        "@types/validator": "^13.15.2",
        "@types/xlsx": "^0.0.35",
        "ts-node-dev": "^2.0.0",
        "tsx": "^4.20.6",
        "typescript": "^5.9.2"
    }
}
